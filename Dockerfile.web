FROM node:20-alpine AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
# Keep dev deps in the image because we run drizzle-kit at container startup (db:push)
RUN npm run build

FROM node:20-alpine AS runtime
WORKDIR /app
ENV NODE_ENV=production
ENV PORT=5000

# Install full unzip to avoid BusyBox stripped unzip limitations for parsing Excel
RUN apk add --no-cache unzip

COPY --from=build /app/package*.json ./
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/dist ./dist
COPY --from=build /app/uploads ./uploads

# drizzle-kit config + schema files (needed for db:push at runtime)
COPY --from=build /app/drizzle.config.ts ./drizzle.config.ts
COPY --from=build /app/shared ./shared

EXPOSE 5000
CMD ["npm", "run", "start"]