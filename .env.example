# Orbia SaaS - Environment Configuration (example)

# ============================================
# APP
# ============================================
NODE_ENV=production
PORT=5000
SESSION_SECRET=change-me-64-hex
SEED=false
SEED_MODE=0

# ============================================
# DATABASE
# ============================================
POSTGRES_DB=orbia
POSTGRES_USER=orbia
POSTGRES_PASSWORD=change-me
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://orbia:change-me@postgres:5432/orbia

# ============================================
# NETWORK / CORS
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:5000,http://127.0.0.1:5000
BACKEND_URL=
PUBLIC_APP_URL=
APP_ORIGIN=http://127.0.0.1:5000

# ============================================
# AI SERVICE (FastAPI)
# ============================================
AI_SERVICE_URL=http://ai:8001
AI_SERVICE_PORT=8001
AI_WORKER_TIMEOUT_SECONDS=25
WHISPER_MODEL=base

# ============================================
# BACKEND LIMITS
# ============================================
STT_RATE_LIMIT_PER_MIN=10
STT_CONCURRENCY_PER_TENANT=1
STT_MAX_BASE64_BYTES=2000000
STT_TIMEOUT_MS=30000
STT_RETRY_ON_FAILURE=true
STT_DEBUG=false
MAX_EXPORT_ROWS=2000
PDF_TIMEOUT_MS=25000
PDF_PREVIEW_LIMIT_PER_MIN=5
MATERIALIZED_REFRESH_THROTTLE_MS=300000
TENANT_LOG_RETENTION_MONTHS=12

# ============================================
# OPTIONAL TOKENS / SECRETS
# ============================================
EXPORT_TOKEN_SECRET=change-me-export-secret
SUPERADMIN_IP_ALLOWLIST=
TRUST_PROXY=false
