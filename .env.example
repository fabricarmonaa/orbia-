# Orbia SaaS - Environment Configuration (example)

# ============================================
# APP
# ============================================
NODE_ENV=production
PORT=5000
SESSION_SECRET=change-this-super-secret

# ============================================
# DATABASE
# ============================================
POSTGRES_DB=orbia
POSTGRES_USER=orbia
POSTGRES_PASSWORD=change-me
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://orbia:change-me@postgres:5432/orbia

# ============================================
# AI SERVICE (FastAPI)
# ============================================
AI_SERVICE_URL=http://ai:8001
AI_SERVICE_PORT=8001
AI_WORKER_TIMEOUT_SECONDS=25
WHISPER_MODEL=base

# ============================================
# BACKEND LIMITS
# ============================================
STT_RATE_LIMIT_PER_MIN=10
STT_CONCURRENCY_PER_TENANT=1
STT_MAX_BASE64_BYTES=2000000
MAX_EXPORT_ROWS=2000
PDF_TIMEOUT_MS=25000
PDF_PREVIEW_LIMIT_PER_MIN=5

# ============================================
# OPTIONAL / CORS
# ============================================
BACKEND_URL=
FRONTEND_URL=

# ============================================
# SUPERADMIN MAILER (GMAIL OAUTH2)
# ============================================
GMAIL_OAUTH_CLIENT_ID=
GMAIL_OAUTH_CLIENT_SECRET=
GMAIL_OAUTH_REFRESH_TOKEN=
GMAIL_FROM=
GMAIL_REPLY_TO=
SUPER_EMAILS_LIMIT_PER_MIN=3

# Optional fallback SMTP (if Gmail OAuth2 is not used)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_BATCH_SIZE=50
EMAIL_BATCH_DELAY_MS=500
DB_WAIT_TIMEOUT_MS=60000
DB_WAIT_INTERVAL_MS=2000
